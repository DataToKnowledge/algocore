{
  "settings": {
    "analysis": {
      "filter": {
        "italian_elision": {
          "type": "elision",
          "articles": [
            "c",
            "l",
            "all",
            "dall",
            "dell",
            "nell",
            "sull",
            "coll",
            "pell",
            "gl",
            "agl",
            "dagl",
            "degl",
            "negl",
            "sugl",
            "un",
            "m",
            "t",
            "s",
            "v",
            "d"
          ]
        },
        "italian_stop": {
          "type": "stop",
          "stopwords": "_italian_"
        },
        "italian_stemmer": {
          "type": "stemmer",
          "language": "light_italian"
        }
      },
      "analyzer": {
        "italian": {
          "tokenizer": "standard",
          "filter": [
            "italian_elision",
            "lowercase",
            "italian_stop",
            "italian_stemmer"
          ],
          "char_filter": [
            "html_strip"
          ]
        },
        "not_analyzed_lower": {
          "tokenizer": "keyword",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "articles": {
      "properties": {
        "uri": {
          "type": "string",
          "index": "no"
        },
        "title": {
          "type": "string",
          "analyzer": "italian"
        },
        "description": {
          "type": "string",
          "analyzer": "italian"
        },
        "categories": {
          "type": "string",
          "analyzer": "simple",
          "fields": {
            "lower": {
              "type": "string",
              "index": "not_analyzed"
            }
          }
        },
        "keywords": {
          "type": "string",
          "analyzer": "simple",
          "fields": {
            "lower": {
              "type": "string",
              "index": "not_analyzed"
            }
          }
        },
        "imageUrl": {
          "type": "string",
          "index": "no"
        },
        "publisher": {
          "type": "string",
          "index": "not_analyzed"
        },
        "date": {
          "type": "date"
        },
        "lang": {
          "type": "string",
          "index": "not_analyzed"
        },
        "text": {
          "type": "string",
          "analyzer": "italian"
        },
        "pin": {
          "type": "geo_point",
          "geohash": true,
          "lat_lon": true,
          "geohash_precision": "100m"
        },
        "cityName": {
          "type": "string",
          "index": "not_analyzed"
        },
        "provinceName": {
          "type": "string",
          "index": "not_analyzed"
        },
        "regionName": {
          "type": "string",
          "index": "not_analyzed"
        },
        "crimes": {
          "type": "string",
          "analyzer": "simple",
          "fields": {
            "lower": {
              "type": "string",
              "index": "not_analyzed"
            }
          }
        },
        "locations": {
          "type": "string",
          "analyzer": "simple",
          "fields": {
            "lower": {
              "type": "string",
              "index": "not_analyzed"
            }
          }
        },
        "persons": {
          "type": "string",
          "analyzer": "simple",
          "fields": {
            "lower": {
              "type": "string",
              "index": "not_analyzed"
            }
          }
        },
        "semanticNames": {
          "type": "string",
          "analyzer": "simple",
          "fields": {
            "lower": {
              "type": "string",
              "index": "not_analyzed"
            }
          }
        },
        "semanticTags": {
          "type": "string",
          "analyzer": "simple",
          "fields": {
            "lower": {
              "type": "string",
              "index": "not_analyzed"
            }
          }
        },
        "annotations": {
          "type": "nested",
          "properties": {
            "name": {
              "type": "string",
              "index": "not_analyzed",
              "fields": {
                "lower": {
                  "type": "string",
                  "analyzer": "not_analyzed_lower"
                }
              }
            },
            "wikipediUrl": {
              "type": "string",
              "index": "no"
            },
            "tags": {
              "type": "string",
              "index": "not_analyzed",
              "fields": {
                "lower": {
                  "type": "string",
                  "analyzer": "not_analyzed_lower"
                }
              }
            },
            "offset": {
              "type": "integer",
              "index": "no"
            },
            "support": {
